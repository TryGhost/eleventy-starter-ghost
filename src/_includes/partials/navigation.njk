<nav class="site-nav">
    {% if site.navigation %}
        <div class="site-nav-left">
            {% for item in site.navigation %}
                <a {% if page.url == item.url %}aria-current="page"{% endif %} class="site-nav-item" href="{{ item.url }}">
                    {{ item.label }}
                </a>
            {% endfor %}
        </div>
    {% endif %}
    {% if site.secondary_navigation %}
        <div class="site-nav-right">
            {% for item in site.secondary_navigation %}
                <a {% if page.url == item.url %}aria-current="page"{% endif %} class="site-nav-item" href="{{ item.url }}">
                    {{ item.label }}
                </a>
            {% endfor %}
        </div>
    {% endif %}
</nav>
